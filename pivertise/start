#!/bin/sh -x

# Get the defaults
. ./pivertise.conf

HCICONFIG=`which hciconfig`
HCITOOL=`which hcitool`

# Start LE advertising
echo "Launching pivertise..."
sudo $HCICONFIG $BLUETOOTH_DEVICE up
sudo $HCICONFIG $BLUETOOTH_DEVICE name $NAME
sudo $HCICONFIG $BLUETOOTH_DEVICE noleadv
sudo $HCICONFIG $BLUETOOTH_DEVICE noscan
sudo $HCITOOL -i $BLUETOOTH_DEVICE cmd 0x08 0x0008 1e 02 01 1a 1a ff 4c 00 02 15 e2 c5 6d b5 df fb 48 d2 b0 60 d0 f5 a7 10 96 e0 00 00 00 00 c5 00 00 00 00 00 00 00 00 00 00 00 00 00
#sudo $HCITOOL -i $BLUETOOTH_DEVICE cmd 0x08 0x0008 1e 02 01 1a 1a ff 4c 00 02 15 $UUID $MAJOR $MINOR $POWER 00 00 00 00 00 00 00 00 00 00 00 00 00
#sudo $HCITOOL -i $BLUETOOTH_DEVICE cmd 0x08 0x0008 1e 02 02 01 1a ff 4c 00 02 15 $UUID $MAJOR $MINOR $POWER
sudo $HCICONFIG $BLUETOOTH_DEVICE leadv 3

echo "Complete"
exit 0
